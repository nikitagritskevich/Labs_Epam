<configuration>
  <appender name="ReportPortalAppender"
    class="com.epam.reportportal.logback.appender.ReportPortalAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%t] %-5level - %msg%n</pattern>
    </encoder>
  </appender>
  <root>
    <appender-ref ref="ReportPortalAppender"/>
  </root>
</configuration>